<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF"
    android:layout_height="match_parent"
    tools:context=".More">
    <!-- navigasi bar-->
    <androidx.appcompat.widget.Toolbar
        android:gravity="center"
        android:background="@drawable/khusus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="MORE"
                android:textColor="@color/warnaputih"
                android:textSize="20dp"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:id="@+id/login_page7"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:background="@color/warnaputih"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <RelativeLayout
            android:background="#e0dede"
            android:layout_width="15dp"
            android:layout_height="wrap_content"/>
        <Button
            android:background="@drawable/user"
            android:gravity="left|center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="  Login/Register"
                android:textColor="@color/texthitam"
                android:textSize="15dp"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:background="#e0dede"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/tentang1"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:background="@color/warnaputih"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <RelativeLayout
            android:background="#e0dede"
            android:layout_width="15dp"
            android:layout_height="wrap_content"/>
        <Button
            android:background="@drawable/about"
            android:gravity="left|center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="  About"
                android:textColor="@color/texthitam"
                android:textSize="15dp"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:background="#e0dede"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <LinearLayout
        android:id="@+id/Ketentuan"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="center"
        android:background="@color/warnaputih"
        android:layout_width="match_parent"
        android:layout_height="60dp">
        <RelativeLayout
            android:background="#e0dede"
            android:layout_width="15dp"
            android:layout_height="wrap_content"/>
        <Button
            android:background="@drawable/berjabat"
            android:gravity="left|center_vertical"
            android:layout_width="30dp"
            android:layout_height="30dp"/>
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="  Terms And Conditions"
                android:textColor="@color/texthitam"
                android:textSize="15dp"/>
        </LinearLayout>
    </LinearLayout>
    <RelativeLayout
        android:background="#e0dede"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <RelativeLayout
        android:background="#e0dede"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>
    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </LinearLayout>
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/BottomNavigation"
        app:itemHorizontalTranslationEnabled="true"
        app:labelVisibilityMode="labeled"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/warnaputih"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation"/>

</LinearLayout>