<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="@drawable/backgroud_khusus2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".News">
    <androidx.appcompat.widget.Toolbar
        android:gravity="center"
        android:background="@drawable/khusus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="NEWS"
                android:textColor="@color/warnaputih"
                android:textSize="20dp"/>
        </LinearLayout>
    </androidx.appcompat.widget.Toolbar>
    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <ImageView
        android:id="@+id/terbaru1"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:layout_width="match_parent"
        android:layout_height="207dp"
        android:src="@drawable/ns1"/>
    <LinearLayout
        android:id="@+id/daftar2"
        android:foreground="?android:attr/selectableItemBackground"
        android:clickable="true"
        android:gravity="clip_horizontal"
        android:background="@drawable/dc3"
        android:layout_width="419dp"
        android:layout_height="160dp">
    </LinearLayout>
    <LinearLayout
        android:id="@+id/daftar3"
        android:clickable="true"
        android:foreground="?android:attr/selectableItemBackground"
        android:gravity="clip_horizontal"
        android:background="@drawable/as1"
        android:layout_width="419dp"
        android:layout_height="180dp">
    </LinearLayout>
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/BottomNavigation"
        app:itemHorizontalTranslationEnabled="true"
        app:labelVisibilityMode="labeled"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentBottom="true"
        app:itemBackground="@color/warnaputih"
        app:itemIconTint="@drawable/selector"
        app:itemTextColor="@drawable/selector"
        app:menu="@menu/menu_navigation"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>